<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.DayTastic.Light" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#2196F3</item>  <!-- Blue -->
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.DayTastic.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#0D47A1</item>  <!-- Deep Blue -->
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnPrimary">#000000</item>  <!-- Deep Blue -->
        <item name="colorOnSecondary">#000000</item>
        <item name="android:colorBackground">#4E4D4D</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <!-- Custom Theme (Example: Green) -->
    <style name="Theme.DayTastic.Green" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>  <!-- Green -->
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorSecondary">#8BC34A</item>
        <item name="android:colorBackground">#E8F5E9</item>
        <item name="android:textColor">#1B5E20</item>
    </style>
</resources>