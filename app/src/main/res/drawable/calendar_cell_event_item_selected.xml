<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceInverse" /> <!-- Your Calendar Background -->
            <stroke android:width="1dp" android:color="?attr/colorSurfaceInverse" /> <!-- Outer Border -->
        </shape>
    </item>

    <!-- Inner Border -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp" android:id="@+id/inner_border">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceInverse" /> <!-- Same as background to make it transparent -->
            </shape>
    </item>

</layer-list>
